class main{

/* Sumatoria de flotantes, 
   ej: sumatoria(4) = 4.0 + 3.0 + 2.0 + 1.0
       sumatoria(4.5) = 4.5 + 3.5+ 2.5+ 1.5+ 0.5
 */

float sumatoria(float b){
	float total;
	float i;
	float res;
        total = 0.0;
        i = b;
        
	while(i > 0.0  || i > 0.0 )   {
		if(i > 0.0){
			total = total + i;
                }
		i -= 1.0;
	} /* fin while */
	res = total;
	return res;

}

void printf(float f) extern;

void main(){
     float f;
     float a;
     a = 8.0;
     f = sumatoria(a);
     printf(f);
     return;
}

}
